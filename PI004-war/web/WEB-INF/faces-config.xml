<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <lifecycle>
        <phase-listener>
            sp.senac.listener.AutorizacaoListener
        </phase-listener>
    </lifecycle>
    <navigation-rule>
        <navigation-case>
            <from-outcome>CadastroProduto</from-outcome>
            <to-view-id>/admin/cadastroProduto.xhtml</to-view-id>
        </navigation-case>
        
         <navigation-case>
            <from-outcome>CadastroBackOffice</from-outcome>
            <to-view-id>/admin/cadastrarBackOffice.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>AlterarProduto</from-outcome>
            <to-view-id>/admin/buscarProduto.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>RelatorioVendas</from-outcome>
            <to-view-id>/admin/relatorioVendas.xhtml</to-view-id>
        </navigation-case>
        
        
    </navigation-rule>

</faces-config>
